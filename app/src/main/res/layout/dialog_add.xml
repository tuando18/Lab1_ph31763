<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_shape"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Country"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_Country"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập country"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Name"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_Name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập name "
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Population"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_Population"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Nhập Population"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Capital"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spCapital"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"
            android:background="@drawable/bg_spinner"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Regions"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_Regions"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:hint="Nhập Regions"
            android:inputType="text"
            android:textColor="@color/black"
            android:paddingLeft="10dp"
            android:textSize="23sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="State"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/ed_State"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập state"
            android:inputType="textMultiLine"
            android:paddingLeft="10dp"
            android:textColor="@color/black"
            android:textSize="23dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:orientation="horizontal">

