<!-- res/drawable/custom_spinner_background.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- State when the Spinner is pressed -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#CCCCCC" /> <!-- Set the pressed color -->
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:right="10dp" />
        </shape>
    </item>
    <!-- Default state -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" /> <!-- Set the default color -->
            <corners android:radius="8dp" />
            <padding android:left="10dp" android:right="10dp" />
        </shape>
    </item>
</selector>
